<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.recipe.connect.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_loginFragment_to_feedRvFragment"
            app:destination="@id/feedRvFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="false" />


        <action
            android:id="@+id/action_mainFragment_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="false" />

    </fragment>

    <action android:id="@+id/action_global_loginFragment" app:destination="@id/loginFragment" />


    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.recipe.connect.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.recipe.myprofile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />

    </fragment>


    <fragment
        android:id="@+id/feedRvFragment"
        android:name="com.example.recipe.feed.FeedRvFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <argument
            android:name="userEmail"
            app:argType="string" />

        <action
            android:id="@+id/action_feedRvFragment_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />


    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.recipe.feed.MainFragment"
        android:label="main_frag"
        tools:layout="@layout/main_layout" >
        <argument
            android:name="userEmail"
            app:argType="string" />

    </fragment>

    <action android:id="@+id/action_global_profileFragment" app:destination="@id/profileFragment" />
    <action android:id="@+id/action_global_feedFragment" app:destination="@id/feedRvFragment" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.recipe.pages.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <action android:id="@+id/action_global_aboutFragment" app:destination="@id/aboutFragment" />
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.example.recipe.post.AddRecipeFragment"
        android:label="fragment_add_post"
        tools:layout="@layout/fragment_add_recipe" />
    <action android:id="@+id/action_global_addPostFragment" app:destination="@id/addPostFragment" />
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.recipe.myprofile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />

    <action android:id="@+id/action_global_editPostFragment" app:destination="@id/editProfileFragment" />

    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.example.recipe.post.RecipeDetailsFragment"
        android:label="fragment_post_details"
        tools:layout="@layout/fragment_recipe_details" >
        <argument
            android:name="postId"
            app:argType="string" />
        <action
            android:id="@+id/action_postDetailsFragment_to_editPostFragment"
            app:destination="@id/editPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/editPostFragment"
        android:name="com.example.recipe.post.EditRecipeFragment"
        android:label="fragment_edit_post"
        tools:layout="@layout/fragment_edit_recipe" >
        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.recipe.friends.FriendsFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_userFragment"
            app:destination="@id/userFragment" />
    </fragment>
    <action android:id="@+id/action_global_searchFragment" app:destination="@id/searchFragment" />
    <fragment
        android:id="@+id/introFragment"
        android:name="com.example.recipe.pages.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/action_introFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph" />
        <action
            android:id="@+id/action_introFragment_to_feedRvFragment"
            app:destination="@id/feedRvFragment"
            app:popUpTo="@id/nav_graph" />

        <action
            android:id="@+id/action_mainFragment_to_mainRvFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/nav_graph" />

    </fragment>
    <fragment
        android:id="@+id/userFragment"
        android:name="com.example.recipe.userProfile.UserProfileFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user_Profile" >
        <argument
            android:name="userEmail"
            app:argType="string" />
    </fragment>
</navigation>