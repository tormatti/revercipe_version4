<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".post.AddRecipeFragment">

<LinearLayout
    android:id="@+id/llInputs"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.496"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent">


        <ProgressBar
            android:elevation="1dp"
            android:id="@+id/frag_addP_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="201dp"
            android:layout_height="218dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/username_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/aldrich"
            android:text="New Recipie"
            android:textColor="@color/light_orange"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/username_tv2"
            app:layout_constraintStart_toStartOf="parent"
            />

        <EditText
            android:id="@+id/fragNewRecipe_userName_et"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/input_edit_account_bg"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingRight="20dp"
            android:paddingBottom="13dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/fragNewRecipe_userName_et"
            app:layout_constraintStart_toStartOf="parent"

            />


        <EditText
            android:id="@+id/fragNewRecipe_userName_et2"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/input_edit_account_bg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingRight="20dp"
            android:paddingBottom="13dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/fragNewRecipe_userName_et2"
            app:layout_constraintStart_toStartOf="parent"

            />

        <EditText
            android:id="@+id/editTextIn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/input_edit_account_bg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingRight="20dp"
            android:paddingBottom="13dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps description"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/editTextIn"
            app:layout_constraintStart_toStartOf="parent"

            />



        <EditText
            android:id="@+id/fragNewRecipe_userName_et3"
            android:layout_width="377dp"
            android:layout_height="130dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/input_edit_account_bg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingRight="20dp"
            android:paddingBottom="13dp"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:maxLines="10"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload photo"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20sp"
            app:layout_constraintTop_toBottomOf="@+id/fragNewRecipe_userName_et3"
            app:layout_constraintStart_toStartOf="parent"

            />



        <ImageButton
            android:id="@+id/frag_addP_cam_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:src="@android:drawable/ic_menu_camera"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:layout_constraintStart_toStartOf="@+id/textView16"

            />

        <ImageButton
            android:backgroundTint="@color/green"
            android:id="@+id/frag_addP_gallery_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@android:drawable/ic_menu_gallery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/frag_addP_iv_p"
            android:layout_width="176dp"
            android:layout_height="177dp"
            android:layout_marginTop="100dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_addP_gallery_btn"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App"
            app:srcCompat="@drawable/splash_bg"
            app:strokeColor="@color/white"
            app:strokeWidth="8dp" />


        <Button
            android:id="@+id/fragEditAccount_save_btn"
            android:layout_width="151dp"
            android:layout_height="46dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/light_orange"
            android:drawablePadding="5dp"
            android:text="save"
            android:textColor="@color/black"
            app:cornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_addP_iv_p"
             />

        <Button
            android:id="@+id/fragEditAccount_cancel_btn"
            android:layout_width="151dp"
            android:layout_height="46dp"
            android:backgroundTint="@color/light_orange"
            android:drawablePadding="5dp"
            android:text="cancel"
            android:textColor="@color/black"
            app:cornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/frag_addP_iv_p"
            app:layout_constraintEnd_toEndOf="parent"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>


</ScrollView>



